= form_tag report_path(@abstract_model), :multipart => true, class: 'form-horizontal denser' do
  .form-actions
    %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}
    %button.btn.btn-info{type: "submit"}
      = t("admin.report.confirmation")
    %button.btn{type: "submit", name: "_continue"}
      %i.icon-remove
      = t("admin.form.cancel")
